    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {% for product in listProducts %}
        <tr>
            <td><a href="{{ path('product.show', {id : product.id}) }}">{{ product.name }}</a></td>
            <td>{{ product.price }}â‚¬</td>
            <td>{{ product.Description[:300] }}<a href="{{ path('product.show', {id : product.id}) }}">... voir plus</a></td>
            <td>{{ product.createdAt|date("m/d/Y") }}</td>
        </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
