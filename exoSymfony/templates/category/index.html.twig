{% extends 'base.html.twig' %}

{% block title %}Hello Bouffeur d'oignon!{% endblock %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Nombre d'article</th>
    </tr>
  </thead>
  <tbody>
    {% for category in listCategory %}
        <tr>
            <td><a href="{{ path('category.show', {id : category.id}) }}">{{ category.name }}</a></td>
            <td>{{ category.description }}</td>
            <td>{{ listNbArticle[category.id]}}</td>
        </tr>
    {% endfor %}
  </tbody>
  {{ knp_pagination_render(listCategory) }}
</table>
{% endblock %}
